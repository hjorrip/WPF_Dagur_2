<Window x:Class="WPF2_0_Panels.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF2_0_Panels"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <DockPanel>
        <Button DockPanel.Dock="Bottom" Background="Blue">Bottom</Button>
        <Button DockPanel.Dock="Left"  Background="Green">Left</Button>
        <Button DockPanel.Dock="Top" Background="Yellow" >Top</Button>
        <Button DockPanel.Dock="Right"  Background="Red">Right</Button>
        <Button >Center</Button>
    </DockPanel>
</Window>
